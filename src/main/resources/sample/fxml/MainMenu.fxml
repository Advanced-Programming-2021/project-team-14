                </JFXButton>
                <JFXButton onMouseClicked="#change" text="Deck">
                    <graphic>
                        <FontAwesomeIconView glyphName="TH" styleClass="icon"/>
                    </graphic>
                </JFXButton>
                <JFXButton onMouseClicked="#change" text="Shop">
                    <graphic>
                        <FontAwesomeIconView glyphName="SHOPPING_CART" styleClass="icon"/>
                    </graphic>
                </JFXButton>
                <JFXButton onMouseClicked="#change" text="Scoreboard">
                    <graphic>
                        <FontAwesomeIconView glyphName="TROPHY" styleClass="icon"/>
                    </graphic>
                </JFXButton>
                <JFXButton onMouseClicked="#change" text="Profile">
                    <graphic>
                        <FontAwesomeIconView glyphName="USER" styleClass="icon"/>
                    </graphic>
                </JFXButton>
                <JFXButton layoutX="10.0" layoutY="210.0" onMouseClicked="#change" text="Lobby">
                    <graphic>
                        <FontAwesomeIconView glyphName="STACK_EXCHANGE" styleClass="icon"/>
