                </JFXButton>
                <JFXButton layoutX="10.0" layoutY="210.0" onMouseClicked="#change" text="TV">
                    <graphic>
                        <FontAwesomeIconView glyphName="TV" styleClass="icon"/>
                    </graphic>
                </JFXButton>
                <JFXButton layoutX="10.0" layoutY="210.0" onMouseClicked="#change" text="Auction">
                    <graphic>
                        <FontAwesomeIconView glyphName="STACK_EXCHANGE" styleClass="icon"/>
                    </graphic>
                </JFXButton>
                <JFXButton onMouseClicked="#change" text="Import\Export">
                    <graphic>
                        <FontAwesomeIconView glyphName="EXCHANGE" styleClass="icon"/>
                    </graphic>
                </JFXButton>
                <JFXButton onMouseClicked="#change" text="Logout">
                    <graphic>
                        <FontAwesomeIconView glyphName="SIGN_OUT" styleClass="icon"/>
                    </graphic>
                </JFXButton>
            </VBox>
      </AnchorPane>
    <AnchorPane fx:id="view" layoutX="220" styleClass="view"/>
</AnchorPane>
